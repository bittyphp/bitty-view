{
    "name": "bittyphp/bitty-view",
    "description": "Abstract view layer for Bitty.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Luke Kingsley",
            "email": "bizurkur@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "psr/http-message": "^1.0",
        "bittyphp/bitty-http": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "squizlabs/php_codesniffer": "^3.0",
        "phing/phing": "^2.16",
        "phpstan/phpstan": "^0.10.7",
        "phpstan/phpstan-deprecation-rules": "^0.10.2",
        "phpstan/phpstan-phpunit": "^0.10.0",
        "phpstan/phpstan-strict-rules": "^0.10.1"
    },
    "autoload": {
        "psr-4": {
            "Bitty\\View\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bitty\\Tests\\View\\": "tests/"
        }
    },
    "minimum-stability": "stable"
}
