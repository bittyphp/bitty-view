{
    "name": "bittyphp/bitty-view",
    "description": "Abstract view layer for Bitty.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Luke Kingsley",
            "email": "bizurkur@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "psr/http-message": "^1.0",
        "bittyphp/bitty-http": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Bitty\\View\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bitty\\Tests\\View\\": "tests/"
        }
    },
    "minimum-stability": "dev"
}
