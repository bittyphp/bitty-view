{
    "name": "bittyphp/view",
    "type": "library",
    "description": "Abstract view layer for Bitty.",
    "license": "MIT",
    "authors": [
        {
            "name": "Luke Kingsley",
            "email": "bizurkur@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "bittyphp/http": "^2.0",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "bizurkur/coding-standard": "^1.0",
        "codacy/coverage": "^1.4",
        "ergebnis/composer-normalize": "^2.2",
        "infection/infection": "^0.14",
        "jakub-onderka/php-parallel-lint": "^1.0",
        "phing/phing": "^2.16",
        "phpstan/phpstan": "^0.11",
        "phpstan/phpstan-deprecation-rules": "^0.11",
        "phpstan/phpstan-phpunit": "^0.11",
        "phpstan/phpstan-strict-rules": "^0.11",
        "phpunit/phpunit": "^8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Bitty\\View\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bitty\\Tests\\View\\": "tests/"
        }
    },
    "minimum-stability": "stable"
}
